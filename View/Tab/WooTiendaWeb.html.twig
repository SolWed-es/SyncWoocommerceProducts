        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
    }

    .modal-content {
        background-color: #fefefe;
        margin: 15% auto;
        padding: 20px;
        border: 1px solid #888;
        border-radius: 5px;
        width: 400px;
        max-width: 90%;
    }

    .status-indicator {
        display: inline-block;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        margin-right: 8px;
    }

    .status-published {
        background-color: #28a745;
    }

    .status-draft {
        background-color: #ffc107;
    }

    .status-private {
        background-color: #dc3545;
    }

    .woo-form-section {
        border: 1px solid #e3e6f0;
        border-radius: 5px;
