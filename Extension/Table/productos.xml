<?xml version="1.0" encoding="UTF-8"?>
<table>
    <!-- Basic WooCommerce data -->
    <column>
        <name>woo_id</name>
        <type>integer</type>
    </column>
    <column>
        <name>woo_product_name</name>
        <type>character varying(100)</type>
    </column>
    <column>
        <name>woo_price</name>
        <type>character varying(10)</type>  <!-- Saved as 'string' in woo db, verify later type issues are encountered -->
    </column>
    <column>
        <name>woo_sale_price</name>
        <type>character varying(10)</type>   <!-- Saved as 'string' in woo db, verify later type issues are encountered -->
    </column>
    <column>
        <name>woo_permalink</name>
        <type>text</type>
    </column>
    <column>
        <name>woo_sku</name>
        <type>character varying(100)</type>
    </column>
    <column>
        <name>woo_status</name>
        <type>character varying(20)</type>
    </column>
    <column>
        <name>woo_catalog_visibility</name>
        <type>character varying(40)</type>
    </column>

    <!-- Inventory & Shipping -->
    <column>
        <name>woo_manage_stock</name>
        <type>boolean</type> <!-- translated to 'yes' or 'no' to correctly render checkboxes in twig file -->
    </column>
    <column>
        <name>woo_stock_quantity</name>
        <type>integer</type>
    </column>
    <column>
        <name>woo_stock_status</name>
        <type>character varying(20)</type>
    </column>
    <column>
        <name>woo_weight</name>
        <type>character varying(20)</type>
    </column>

    <!-- Content -->
    <column>
        <name>woo_description</name>
        <type>text</type>
    </column>
    <column>
        <name>woo_short_description</name>
        <type>text</type>
    </column>

    <!-- Product Features. bools translated to 'yes' or 'no' to correctly render checkboxes in twig file -->
    <column>
        <name>woo_featured</name>
        <type>boolean</type> 
    </column>
    <column>
        <name>woo_virtual</name>
        <type>boolean</type>
    </column>
    <column>
        <name>woo_downloadable</name>
        <type>boolean</type>
    </column>
    <column>
        <name>woo_reviews_allowed</name>
        <type>boolean</type>
    </column>
    <column>
        <name>woo_tax_status</name>
        <type>character varying(20)</type>
    </column>

    <!-- Existing fields not in new list -->
    <column>
        <name>woo_categories</name>
        <type>text</type>
    </column>
    <column>
        <name>woo_images</name>
        <type>text</type>
    </column>
        <column>
        <name>woo_dimensions</name>
        <type>text</type>
    </column>

    <column>
        <name>woo_nick</name>
        <type>character varying(50)</type>
    </column>
    <column>
        <name>woo_creation_date</name>
        <type>timestamp</type>
    </column>
    <column>
        <name>woo_last_nick</name>
        <type>character varying(50)</type>
    </column>
    <column>
        <name>woo_last_update</name>
        <type>timestamp</type>
    </column>
</table>
